{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es6",
		"lib": [
			"es2015"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"pretty": true,
		"newLine": "lf",
		"stripInternal": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noEmitOnError": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		"dist",
		"source/test/fixtures",
	]
}
